<div class="container-lg mt-5">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-md-5 col-md-4">
      <div class="card shadow">
        <div class="card-body py-5">
          <h2 class="card-title">Sign up</h2>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="row">
              <%= f.input :name,
                          required: true,
                          input_html: {
                            class: "form-control",
                            autocomplete: "name",
                          },
                          label_html: { class: "form-label mb-0" },
                          wrapper_class: "col-12 mb-2" %>
              <%= f.input :username,
                          required: true,
                          input_html: {
                            class: "form-control",
                            autocomplete: "username",
                          },
                          label_html: { class: "form-label mb-0" },
                          wrapper_class: "col-12 mb-2" %>
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: {
                            class: "form-control",
                            autocomplete: "email"
                          },
                          label_html: { class: "form-label mb-0" },
                          wrapper_class: "col-12 mb-2" %>
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class: "form-control" },
                          label_html: { class: "form-label mb-0" },
                          hint_html: { class: "fst-italic text-muted fw-light lh-1" },
                          wrapper_class: "col-12 mb-2" %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password", class: "form-control" },
                          label_html: { class: "form-label mb-0" },
                          wrapper_class: "col-12 mb-2" %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "btn btn-primary text-white fw-bold" %>
            </div>
          <% end %>

          <p class="fw-light">Already registered? <%= render "devise/shared/links" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
