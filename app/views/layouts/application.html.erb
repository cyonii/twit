<!DOCTYPE html>
<html>
  <head>
    <title>Twiit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top">
      <nav class="navbar navbar-expand-md navbar-light bg-primary">
        <div class="container-lg">
          <%= link_to "Twiit", root_path, class: "navbar-brand text-white fw-bold" %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "New Twit", root_path, class: "btn btn-light text-primary rounded-1" %>
              </li>
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to edit_user_registration_path, class: "btn" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                  <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
                  <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                  <path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
                </svg>
                <span class="text-white">
                  <%= current_user.name %>
                </span>
                <% end %>
              </li>
              <% end %>
              <li class="nav-item">
              <% if user_signed_in? %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn text-white" %>
              <% else %>
                <%= link_to "Sign up", new_user_registration_path, class: "btn text-white" %>
                <%= link_to "Log in", new_user_session_path, class: "btn text-white" %>
              <% end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <% if flash[:notice] %>
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <div class="container">
          <p class="mb-0"><%= notice %></p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div class="container">
          <p class="mb-0"><%= alert %></p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <main>
      <%= yield %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </body>
</html>
